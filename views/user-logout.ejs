<!-- user/logout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/icon.png" type="image/x-icon">
    <title><%= pageTitle %></title>
</head>

<style>
    /*** scrollbar ***/
    ::-webkit-scrollbar { height: 0px; width: 0px; }

    /*** elements ***/
    html { height: 100vh; width: 100vw; background-size: cover; background-repeat: no-repeat; }
    body { height: 100vh; margin: 0px; padding: 0px; overflow: hidden; font-family: Arial, Helvetica, sans-serif; background-color: #3c41d6 }
    h3 { margin: 0px; }
    p { margin: 0px; }
    button:focus, button:hover { background-color: white; color: black; }
    button { color: black; }
    button:focus { outline: none; }

    /*** ids ***/
    #title { margin-top: 26px; }
    #main-logout { background-color: #f7f9f9; margin: auto; margin-top: 50px; width: 400px; text-align: center; border: 1px solid black; }
    #main-logout button { display: inline-block; height: 30px; width: 75px; border-style: none; border: 1px solid black; }
    #buttonNo { margin-bottom: 25px; }
    #buttonYes { margin-top: 25px; margin-bottom: -1px; margin-left: -6px; }

    /*** mobile ***/
    @media screen and (max-width: 1000px) {
        button:focus, button:hover { background-color: white; color: black; }
        
        #main-logout { width: 90vw; margin-top: 10px; }
    }
</style>

<body>
    <!-- nav menu -->
    <% if(admin != null && admin == true) { %>  <!-- admin view -->
        <%- include('nav-menu-admin.ejs') %>
    <% } else if(loggedIn == true) { %> <!-- logged in user view -->
        <%- include('nav-menu-user.ejs') %>
    <% } %>
    
    <div id="main-logout">
        <!-- logout error message-->
        <p><%=statusText %></p>

        <!-- logout confirm text -->
        <h3 id="title">Are you sure you wanna logout?</h3>
        
        <!-- logout buttons -->
        <div style="display: inline-block;"><button id="buttonNo" class="btn" onclick="window.history.back()"><b>No</b></button></div>
        <div style="display: inline-block;">
            <form action="/logout-post" method="POST">
                <button id="buttonYes" class="btn" type="submit"><b>Yes</b></button>
            </form>
        </div>
    </div>
</body>
</html>
