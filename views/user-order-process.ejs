        <!-- images -->
        <img id="orderProcessImgLoadingGif" src="/loading.gif"></img>
        <img hidden id="orderProcessImgCheckmarkPng" src="/checkmark.png"></img>
        <img hidden id="orderProcessImgDeclineCrossPng" src="/crossmark.png"></img>

        <!-- text -->
