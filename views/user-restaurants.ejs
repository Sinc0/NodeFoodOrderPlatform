                        <!-- reviews -->
                        <div id="restaurantsRestaurantReview#<%=counter %>" class="restaurantReviewModal" style="display: none;">
                            <% var sortArray = [] %>
                            <% var restaurantRating = null %>
                            
                            <% for(var i = 0; i < reviews.length; i++) { %>
