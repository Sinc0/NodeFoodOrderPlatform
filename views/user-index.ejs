<!-- user/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/icon.png" type="image/x-icon">
    <link rel="manifest" href="/pwa/manifest.json">
    <script src="/service-worker.js"></script>
    <title>Food Ordering Platform</title>
</head>

<script>
    function goBack()
    {
        window.history.back()
    }

    function setBackgroundGif()
    {
        //elements
        let html = document.querySelector("html")

        //set random number
        let randomNumber = Math.floor(Math.random() * 16) + 1
        if(randomNumber > 16) { randomNumber = 16 }
        else if(randomNumber == 0) { randomNumber = 1 }

        //update elements
        html.style.backgroundImage = "url(/gifs/" + randomNumber + ".gif)"
    }
</script>

<style>
    /*** scrollbar ***/
    ::-webkit-scrollbar { width: 0px; }

    /*** elements ***/
    html { height: 100vh; width: 100vw; background-size: cover; background-repeat: no-repeat; }
    body { height: 100vh; margin: 0px; padding: 0px; overflow: hidden; font-family: Arial, Helvetica, sans-serif; }
    h2 { margin: 0px; }
    a { text-decoration: none; color: white; }
    p { margin: 0px; }
    
    /*** classes ***/
    .indexAnonMenuItem { margin: 0px; border-bottom: 1px solid white; }
    .indexAnonMenuItem p
    {
        padding-bottom: 11px;
        padding-left: 4px;
        padding-top: 11px;
        padding-right: 4px;
        text-decoration: none;
        text-shadow: 1px 1px black;
    }

    /*** ids ***/
    #newsPosts { height: 74vh; text-align: center; overflow-y: scroll; }
    #indexAnonMenuAboutButton { border-bottom: 0px solid white; }
    #indexAnonMenu
    {
        margin: 0px;
        margin-left: -30px;
        width: 300px;
        position: absolute;
        top: 40%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }
    #indexAnonMenuContactButton { border-bottom: 0; }

    /*** mobile ***/
    @media screen and (max-width: 1000px) {
        .indexAnonMenuItem { border-bottom: 1px solid white; }

        #bodyIndex { background-image: none; }
        #indexAnonMenu { width: 94vw; top: 0; margin: auto; margin-top: 85%; text-align: center; }
    }
</style>

<body id="bodyIndex" onload="setBackgroundGif()">
    <!-- admin view -->
    <% if(admin != null && admin == true) { %>
        <%- include('nav-menu-admin.ejs') %>
        <h2 style="text-align: center;">Admin Portal</h2>

    <!-- user view -->
    <% } else if(loggedIn == true) { %>
        <%- include('nav-menu-user.ejs') %>

    <!-- anon view -->
    <% } else { %> 
        <div id="indexAnonMenu">
            <div id="indexAnonMenuLoginButton" class="indexAnonMenuItem"><a href="/login"><b><p>Login</p></b></a></div>
            <div id="indexAnonMenuRegisterButton" class="indexAnonMenuItem"></li><a href="/register"><b><p>Register</p></b></a></div>
            <div id="indexAnonMenuRestaurantsButton" class="indexAnonMenuItem"></li><a href="/restaurants"><b><p>Restaurants</p></b></a></div>
            <div id="indexAnonMenuAboutButton" class="indexAnonMenuItem"><a href="/about"><b><p>About</p></b></a></div>
            <!-- <div id="indexAnonMenuContactButton" class="indexAnonMenuItem"><a href="/contact"><b><p>Contact</p></b></a></div> -->
        </div>
    <% } %>
</body>
</html>