<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>

        <!-- admin view -->
        <% if(admin == true) { %>
            <%- include('../snippets/html_nav_menu_admin.ejs') %>
        
        <!-- logged in user view -->
        <% } else if(loggedIn == true) { %>
            <%- include('../snippets/html_nav_menu_logged_in.ejs') %>
        
        <!-- anonmymous view -->
        <% } else { %>
            <%- include('../snippets/html_nav_menu_anon.ejs') %>
        <% } %>

    <main id="main-restaurants">
        <!-- <h1>My Products</h1>
        <p> List of all the products...</p> -->
        <% if (prods.length > 0) { %>
            <div id="grid-restaurants" class="grid">
                <% for (let product of prods) { %>
                    <a style="text-decoration: none; color: black" href="/restaurant/<%= product._id %>">
            <article id="restaurant" class="card product-item">
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                
                <div>
                    <header class="card__header">
                        <h1 class="product__title">Restaurant</h1>
                    </header>
                </div>  

                <div class="card__content">
                    <h3 class="product__price">Open</h3>
                    <h3 class="product__price">Type</h3>
                    <h3 class="product__price">Location</h3>
                    <h3 class="product__price">Hours</h3>
                </div>
                
                <!--
                <div class="card__actions">
                    <a href="/products/<%= product._id %>" class="btn"><button>Details</button></a>
                    <a href="/cart/<%= product._id %>" class="btn"><button>Details</button></a>
                </div>
                -->
            </article>
        </a>
       <% } %>
    </div>
    <% } else { %>
        <h1> No products found</h1>
    <% } %>
    </main>
</body>
</html>