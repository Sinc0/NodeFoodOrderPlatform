<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>

        <!-- admin view -->
        <% if(admin == true) { %>
            <%- include('../snippets/html_nav_menu_admin.ejs') %>
        
        <!-- logged in user view -->
        <% } else if(loggedIn == true) { %>
            <%- include('../snippets/html_nav_menu_logged_in.ejs') %>
        
        <!-- anonmymous view -->
        <% } else { %>
            <%- include('../snippets/html_nav_menu_anon.ejs') %>
        <% } %>

    <main>
        <!-- <h1>My Products</h1>
        <p> List of all the products...</p> -->
        <% if (prods.length > 0) { %>
        <div class="grid">
        <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>

                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                
                <div class="card__content">
                    <h2 class="product__price">$<%= product.price %></h2>
                    <p class="product__description"><%= product.description %></p>
                </div>
                
                <div class="card__actions">
                    <button><a href="/products/<%= product._id %>" class="btn">Details</a></button>
                    <button><a href="/cart/<%= product._id %>" class="btn">Cart</a></button>
                </div>
            </article>
        <% } %>
    </div>
    <% } else { %>
        <h1> No products found</h1>
    <% } %>
    </main>
</body>
</html>