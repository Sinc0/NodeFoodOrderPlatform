<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/restaurant.css">
    <link rel="stylesheet" href="css/stripeForm.css" />
    <script src="/js/functionality.js"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="/js/stripe.js" defer></script>
</head>
<body id="body-checkout" onload="cartAllItems()">
    
    <div id="checkoutCartItems">
        <button onclick="goBack()">Go Back</button>
        <h2>Confirm Order</h2>
        <h3>Total</h3>
        <p>$<%=cartTotalPrice %></p>
        <h3>Items</h3>
    </div>

    <div style="width: 300px; margin: auto;">
        <form id="post-order-form" action="/order-post" method="POST" style="background-color: green; border-radius: 0%">
            <input hidden id="cartAllItems" name="cartAllItems"></input>
            <input hidden id="cartTotalPrice" name="cartTotalPrice"></input>
            <input hidden id="choosenRestaurant" name="restaurant" value="<%=restaurant %>"></input>
            <input hidden id="customerDelivery"></input>
            <input id="customerName" name="customerName" value='<%=customerName %>' placeholder="name"></input>
            <input id="customerPhone" name="customerPhone" value='<%=customerAddress %>' type="tel" placeholder="phone"></input>
            <input id="customerAddress" name="customerAddress" value='<%=customerPhone %>' placeholder="address"></input>
            <input id="customerCommentCheckout" name="customerComment" value="<%=customerComment %>" placeholder="comment to restaurant"></input>
            
            <div style="width: 150px; margin: auto; padding-top: 3px; padding-bottom: 7px;">
                <input id="customerDeliveryRadioButton" type="radio" onclick="customerDeliverySelector()" name="customerDelivery" value="delivery">Delivery</input>
                <br />
                <input id="customerPickUpRadioButton" type="radio" onclick="customerDeliverySelector()" name="customerDelivery" value="pickUp">Pick Up</input>
            </div>
        </form>
    </div>

    <div id="list-of-payment-options">
        <select onchange="selectPaymentOption(this.value)">
            <option value="0" disabled selected hidden>Select Payment Option</option>
            <option value="1">#1</option>
            <option value="2">#2</option>
            <option value="3">#3</option>
        </select>
    </div>



    <div id="selected-payment-option">   
        <!-- payment option #1 -->
        <div id="payment-option-stripe">
            <form id="payment-form">
                <div id="card-element">
                <!-- Elements will create input elements here -->
                </div>
            
                <!-- We'll put the error messages in this element -->
                <div id="card-errors" role="alert"></div>
            
                <!-- <button id="card-button" data-secret="<%= client_secret %>">Pay</button> -->

                <button id="submit" data-secret="<%= client_secret %>">
                    <div class="spinner hidden" id="spinner"></div>
                    <span id="button-text">Pay</span>
                </button>
                
                <!-- 
                <%= amount %>
                <%= currency %>
                <%= client_secret %> 
                -->

                <!-- <button id="card-button" data-secret="{{ client_secret }}">Submit Payment</button> -->
            </form>
        </div>
    </div>

</body>
</html>