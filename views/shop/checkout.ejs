        <% if(commentToRestaurant != "") { %>
        <h3>Comment</h3>
        <% } %>
        <p><%=commentToRestaurant %></p>
        <h3>Items</h3>
    </div>

    <div id="list-of-payment-options">
        <select onchange="selectPaymentOption(this.value)">
            <option value="0" disabled selected hidden>Select Payment Option</option>
            <option value="1">#1</option>
            <option value="2">#2</option>
            <option value="3">#3</option>
        </select>
    </div>

